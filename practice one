##############################
# adding new array to old one
from array import *
vals = array('u',['s','j','u'])
newarray = array(vals.typecode, (a for a in vals))
for s in vals:
    print(s)
##############################################
from array import *
arr1 = array('i',[2,42,6,-8])

arr2 = array(arr1.typecode,(a for a in arr1))
for i in arr2:
    print(i)
